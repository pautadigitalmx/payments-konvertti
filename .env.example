# Shopify app credentials
SHOPIFY_API_KEY=your-api-key
SHOPIFY_API_SECRET=your-api-secret
SHOPIFY_API_SCOPES=read_products,write_orders

# App URLs
SHOPIFY_APP_URL=https://your-app-domain.example.com
SHOPIFY_APP_HOSTNAME=your-app-domain.example.com

# Webhook verification
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret

# Session and encryption
SESSION_SECRET=replace-with-random-string
ENCRYPTION_KEY=32-character-encryption-key

# Database connection (PostgreSQL/MySQL)
DATABASE_URL=mysql://user:password@localhost:3306/your_db

# Insurance product settings
INSURANCE_PRODUCT_VARIANT_ID=
INSURANCE_AUTO_ADD_ENABLED=false

# Logging
LOG_LEVEL=info
