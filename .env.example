# Shopify app credentials
SHOPIFY_API_KEY=your_app_key
SHOPIFY_API_SECRET=your_app_secret
SHOPIFY_API_SCOPES=read_products,write_products,write_orders,write_script_tags
SHOPIFY_APP_URL=https://your-app-host.example.com
SHOPIFY_APP_HOSTNAME=your-app-host.example.com

# Webhook security
SHOPIFY_WEBHOOK_SECRET=your_webhook_shared_secret

# Session/auth
SESSION_SECRET=change_me_to_random_string
ENCRYPTION_KEY=32_char_random_string_for_db_secrets

# Database
DATABASE_URL=postgresql://user:password@db-host:5432/dbname

# Extensions / insurance configuration
INSURANCE_PRODUCT_VARIANT_ID=gid://shopify/ProductVariant/1234567890
INSURANCE_AUTO_ADD_ENABLED=true

# Optional logging/observability
LOG_LEVEL=info
