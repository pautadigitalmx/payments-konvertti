# Shopify app credentials
SHOPIFY_API_KEY=your_api_key
SHOPIFY_API_SECRET=your_api_secret
SHOPIFY_API_SCOPES=write_orders,read_products,write_script_tags

# App URLs
SHOPIFY_APP_URL=https://payments.konvertti.com/
SHOPIFY_APP_HOSTNAME=payments.konvertti.com

# Security secrets
SHOPIFY_WEBHOOK_SECRET=your_webhook_shared_secret
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=32_character_encryption_key_here

# Database connection
DATABASE_URL=postgres://konvertt_payments:konvertt_payments@localhost:5432/konvertt_payments

# Insurance configuration
INSURANCE_PRODUCT_VARIANT_ID=
INSURANCE_AUTO_ADD_ENABLED=false

# Logging
LOG_LEVEL=info
